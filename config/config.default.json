{
  "api": {
    "timeout": 60,
    "max_retries": 3,
    "initial_retry_delay": 1.0,
    "backoff_factor": 2.0,
    "max_retry_delay": 60.0,
    "circuit_breaker_threshold": 5,
    "circuit_breaker_timeout": 60
  },
  "audio": {
    "sample_rate": 16000,
    "channels": 1,
    "chunk_size": 1024,
    "format": "wav",
    "silence_threshold": 500,
    "silence_duration": 1.0,
    "max_recording_duration": 300,
    "playback_speed": 1.0,
    "buffer_size": 4096
  },
  "storage": {
    "database_name": "medical_assistant.db",
